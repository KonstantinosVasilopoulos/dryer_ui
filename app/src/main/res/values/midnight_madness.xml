<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IDry.MidnightMadness" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_200</item>
        <item name="colorPrimaryVariant">@color/gray_300</item>
        <item name="colorOnPrimary">@color/gray_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_100</item>
        <item name="colorSecondaryVariant">@color/whitesmoke</item>
        <item name="colorOnSecondary">@color/confirmation_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Background color -->
        <item name="android:background">@color/gray_300</item>

        <!-- Text styling -->
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textAlignment">center</item>

        <!-- Font -->
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="fontFamily">@font/proxima_nova_bold</item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->

        <!-- Time-picker style -->
        <item name="android:timePickerStyle">@style/Theme.IDry.DatetimePickerTheme</item>
    </style>

    <!-- Time-picker theme -->
    <style name="Theme.IDry.DatetimePickerTheme" parent="@android:style/Widget.Material.TimePicker">
        <item name="android:headerBackground">@color/gray_300</item>
        <item name="android:numbersTextColor">@color/gray_100</item>
        <item name="android:numbersSelectorColor">@color/gray_200</item>
        <item name="android:numbersBackgroundColor">@color/black</item>
        <item name="android:amPmTextColor">@color/gray_100</item>
    </style>

</resources>